{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "src", // source code
        "outDir": "dest", // default output directory
        "strict": true, // for type checking
        "esModuleInterop": true,
    },
    "include": ["src/**/*.ts"], // include all typescript files within source directory
    "exclude": ["node_modules"] // exclude the node_modules folder
}